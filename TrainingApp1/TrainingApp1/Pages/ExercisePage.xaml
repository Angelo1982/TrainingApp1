<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingApp1.Pages.ExercisePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding CurrentExercise.Title, Mode=OneWay}" VerticalOptions="CenterAndExpand"/>
            <Label Text="{Binding CurrentExercise.Description, Mode=OneWay}" VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"/>
            <Button x:Name="btnEdit" Text="Edit" Clicked="BtnEdit_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>