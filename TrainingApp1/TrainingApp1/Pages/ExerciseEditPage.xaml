<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainingApp1.Pages.ExerciseEditPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="entryTitle" Text="{Binding CurrentExercise.Title, Mode=OneWay}"/>
            <Entry x:Name="entryDescription" Text="{Binding CurrentExercise.Description, Mode=OneWay}"/>
            <Button x:Name="btnSave" Text="Save" Clicked="btnSave_Clicked"/>
            <Button x:Name="btnCancel" Text="Cancel" Clicked="btnCancel_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>